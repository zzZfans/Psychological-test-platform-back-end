<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqjtu.mindassess.mapper.PermissionMapper">

    <resultMap id="permissionInfoVo" type="com.cqjtu.mindassess.pojo.vo.PermissionInfoVo">
        <result property="id" column="id"/>
        <result property="permissionName" column="permission_name"/>
        <result property="component" column="component"/>
        <result property="routerName" column="router_name"/>
        <result property="redirect" column="redirect"/>
        <result property="icon" column="icon"/>
        <result property="permission" column="permission"/>
        <result property="permissionType" column="permission_type"/>
        <result property="status" column="status"/>
        <result property="description" column="description"/>
        <result property="sort" column="sort"/>
        <result property="creteBy" column="creator"/>
        <result property="updateBy" column="updater"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <select id="listPermissionInfoVo" resultMap="permissionInfoVo">
        select p.id,p.permission_name,p.component,p.router_name,p.redirect,p.icon,p.permission,p.permission_type,p.status,p.description,p.sort,
               u1.username as creator,u2.username as updater,p.create_time,p.update_time
        from permission p
                 left join user u1
                           on p.creator_id=u1.id
                 left join user u2
                           on p.updater_id=u2.id
        order by p.sort ASC

    </select>
</mapper>
