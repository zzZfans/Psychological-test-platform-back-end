<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqjtu.mindassess.mapper.RoleMapper">

    <resultMap id="roleInfo" type="com.cqjtu.mindassess.pojo.vo.RoleInfoVo">
        <result property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="status" column="status"/>
        <result property="description" column="description"/>
        <result property="createBy" column="creator"/>
        <result property="updateBy" column="updater"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="listRoleInfo" resultMap="roleInfo">
        select r.id,r.role_name,r.status,r.description,u1.username as creator,u2.username as updater,r.create_time,r.update_time
        from `role` r
                 left join `user` u1
                           on r.creator_id=u1.id
                 left join `user` u2
                           on r.updater_id=u2.id
    </select>
</mapper>
